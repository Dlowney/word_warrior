<h1> Vocabulary Review Exercise</h1>

<div class='containerp'>
  <p>Choose the word from the dropdown menu that best completes the sentence.</p>

  <%= form_tag("/levels/#{ @level.id }/attempts", method: :post) do %>
    <ul class='list_style'>
      <% @questions.each do |q| %>
        <li>
          <% sentences = q.sentence.split('[]') %>
          <%= sentences[0] %>
          <%= select("choice", q.id, @propositions.shuffle.map {|p| [ p, p ] }, { include_blank: true }) %>
          <%= sentences[1] %>
        </li>
      <% end %>
    </ul>

    <div class = "text-center pad">
      <!-- <a href="#" class="ribbon-btn">SOLUTIONS </a> -->
      <%= submit_tag value="Check Answers"%>
    </div>
  <% end %>
</div>

